{
  "name": "cbt-ideas",
  "version": "0.0.1",
  "description": "Ideas forum for CBT",
  "author": "Space Racoons",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev:build": "webpack --mode development --config webpack.config.js",
    "docker:cbt": "docker build -f ./docker/Dockerfile . -p \"3000:3000\"",
    "docker:down": "docker-compose -f ./docker/docker-compose.yml down",
    "docker:build": "docker-compose -f ./docker/docker-compose.yml build",
    "docker:up": "docker-compose -f ./docker/docker-compose.yml up",
    "docker:rebuild": "npm run docker:down && npm run docker:build && npm run docker:up",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "add:mail:user": "docker run --rm   -e MAIL_USER=admin@cbtmp.id   -e MAIL_PASS=123   -ti tvial/docker-mailserver:latest   /bin/sh -c 'echo \"$MAIL_USER|$(doveadm pw -s SHA512-CRYPT -u $MAIL_USER -p $MAIL_PASS)\"' >> mail_server/config/postfix-accounts.cf"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/cqrs": "^6.0.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.6.7",
    "@nestjs/swagger": "^3.1.0",
    "@types/nodemailer": "^6.2.1",
    "axios": "^0.19.0",
    "cookie-parser": "^1.4.4",
    "ejs": "^2.7.1",
    "mongodb": "^3.3.2",
    "nodemailer": "^6.3.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.5.0",
    "pm2": "^3.5.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "styled-components": "^4.3.2",
    "swagger-ui-express": "^4.0.7",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@nestjs/testing": "^6.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/ejs": "^2.6.3",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.7",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^1.0.0",
    "file-loader": "^4.2.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "style-loader": "^0.23.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
